p There are {{posts.length}} posts
div(ng-repeat='post in posts')
  h3 {{post.title}}
  div(class='truncate') {{post.text}}
  a(href='readPost/{{post._id}}', class='button tiny radius') More
  &nbsp
  a(href='editPost/{{post._id}}', class='button tiny radius') Edit
  &nbsp
  a(href='deletePost/{{post._id}}', class='button tiny radius') Delete